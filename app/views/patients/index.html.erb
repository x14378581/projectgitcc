<p id="notice"><%= notice %></p>
<div class="jumbotron" style="filter: alpha(opacity=60); border-radius:25px; border:2px solid #4169E1; padding:20px;">


<h1>Patients</h1>

<div align = "center">
  
<%= form_tag(patients_path, :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search Patients By Lastname & infection" %>
  <%= submit_tag "Search" %>
<% end %>
</br>
<table class = "table table-dark">
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Dateofbirth</th>
      <th>Address</th>
      <th>Phonenumber</th>
      <th>Infection</th>
      <th>Injury</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.firstname %></td>
        <td><%= patient.lastname %></td>
        <td><%= patient.dateofbirth %></td>
        <td><%= patient.address %></td>
        <td><%= patient.phonenumber %></td>
        <td><%= patient.infection %></td>
        <td><%= patient.injury %></td>
        <td><%= link_to 'Show', patient,  class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_patient_path(patient),  class:"btn btn-primary" %></td>
        <td><%= link_to 'Destroy', patient, method: :delete,  class:"btn btn-primary", data: { confirm: 'Are you sure?' }  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Patient', new_patient_path %>
<%= stylesheet_link_tag "/public/stylesheet_link_tag/index" %>
</div>
  </div>
</div>

